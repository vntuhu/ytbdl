main=https://raw.githubusercontent.com/vntuhu/ytbdl/main
home=/data/data/com.termux/files/home
bin=/data/data/com.termux/files/usr/bin
sdc=/data/data/com.termux/files/home/storage/shared
url=$1
echo "1) MP4/MKV-video"
echo "2) M4A/MP3-audio"
echo "x) Exit"
read CHOICE
case $CHOICE in
1)
yt-dlp $url;;
2)
yt-dlp -f 'bestaudio[ext=m4a]/bestaudio[ext=mp3]/bestaudio' -o "$sdc/ytdlp/a-%(title)s.%(ext)s" --sponsorblock-remove all $url;;
x)
exit;;
esac
