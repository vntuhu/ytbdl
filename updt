# rút gọn
main=https://raw.githubusercontent.com/vntuhu/ytbdl/main
home=/data/data/com.termux/files/home
bin=/data/data/com.termux/files/usr/bin

# termux-url-opener
mkdir ~/bin
rm -r $home/bin/termux-url-opener
wget $main/termux-url-opener -P $home/bin
chmod +x $home/bin/termux-url-opener

# ytbdl config
mkdir -p ~/.config/youtube-dl
rm -r $home/.config/youtube-dl/config
wget $main/config -P $home/.config/youtube-dl
mkdir $home/storage/shared/Youtube
mkdir $home/storage/shared/Music/
mkdir $home/storage/shared/Movies/

# ytbdl short
rm -r $bin/ytb
wget $main/ytb -P $bin/
chmod +x $bin/ytb

# video converter
rm -r $bin/conv
wget $main/conv -P $bin
chmod +x $bin/conv
mkdir /sdcard/conv
touch /sdcard/conv/this-is-conv-folder

# resize video
rm -r $bin/resize
wget $main/resize -P $bin/
chmod +x $bin/resize

# ytbdl option
rm -r $bin/yto
wget $main/yto -P $bin
chmod +x $bin/yto

echo "Done..."
