# rút gọn
main=https://raw.githubusercontent.com/vntuhu/ytbdl/main
home=/data/data/com.termux/files/home
bin=/data/data/com.termux/files/usr/bin

# update
rm -r $bin/updt
wget $main/updt -P $bin/
chmod +x $bin/updt

# termux-url-opener
rm -r $home/bin/termux-url-opener
wget $main/termux-url-opener -P $home/bin
chmod +x $home/bin/termux-url-opener

# ytbdl config
rm -r $home/.config/youtube-dl/config
wget $main/config -P $home/.config/youtube-dl

# ytbdl short
rm -r $bin/ytb
wget $main/ytb -P $bin/
chmod +x $bin/ytb

# video converter
rm -r $bin/video
wget $main/video -P $bin
chmod +x $bin/video

# resize video
rm -r $bin/resize
rm -r $bin/conv

# ytbdl option
rm -r $bin/yto
wget $main/yto -P $bin
chmod +x $bin/yto

# anroid tool
rm -r $bin/sdat2img.py
rm -r $bin/img2sdat.py
wget $main/sdat2img.py -P $bin
wget $main/img2sdat.py -P $bin
chmod +x $bin/sdat2img.py
chmod +x $bin/img2sdat.py

echo "Done..."
