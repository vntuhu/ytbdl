echo "1) MP4 to M4A"
echo "2) MKV to M4A"
echo "3) MKV to MP3"
echo "x) Exit"
read CHOICE
case $CHOICE in
1)
ffmpeg -i $1 -q:a 0 -vn -c:a copy -hide_banner -loglevel error $1.m4a;;
2)
ffmpeg -i $1 -q:a 0 -vn -hide_banner -loglevel error $1.m4a;;
3)
ffmpeg -i $1 -q:a 0 -vn -c:a libmp3lame -hide_banner -loglevel error $1.mp3;;
x)
exit;;
esac
